{
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "importOrder": ["^@/", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "jsxSingleQuote": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "printWidth": 80,
  "quoteProps": "as-needed",
  "semi": true,
  "singleAttributePerLine": true,
  "singleQuote": true,
  "tabWidth": 2,
  "tailwindAttributes": [
    "class",
    "className",
    ".*lassNames",
    ".*nimations",
    ".*ariants",
    ".*olors",
    ".*izes",
    ".*irections"
  ],
  "tailwindFunctions": ["cnv"],
  "trailingComma": "none",
  "useTabs": false
}
